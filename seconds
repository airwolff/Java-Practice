var secondsPerMin = 60;
var minsPerHour = 60;
var hoursPerDay = 24;
var daysPerWeek = 7;
var weeksPerYear = 52;
var secondsPerDay = secondsPerMin * minsPerHour * hoursPerDay;
document.write ("There are " + secondsPerDay + "seconds in a day. ");
var yearsAlive = prompt("Years alive?");
var secondsPerLife = secondsPerDay * daysPerWeek * weeksPerYear * yearsAlive;
document.write ("I've also been alive for more then " + secondsPerLife);
